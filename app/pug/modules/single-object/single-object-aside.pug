    var anchorData = [
        { anchor: '#single-object-slider', text: 'ЖК «АКРОПОЛЬ»' },
        { anchor: '#single-object-description', text: 'ОПИСАНИЕ' },
        { anchor: '#single-object-video', text: 'ВИДЕОЗАПИСЬ' },
        { anchor: '#single-object-choose', text: 'ПЛАНИРОВКИ' },
        { anchor: '#single-object-advantages', text: 'ПРЕИМУЩЕСТВА' },
        { anchor: '#footer-map', text: 'ОТДЕЛЫ ПРОДАЖ' }
    ]

aside.single-object_aside(style='background-image: url(img/single-object/slide-image.png)')
    nav.single-object_aside_nav
        .line
        ul.single-object_aside_ul
            each item, i in anchorData
                li.single-object_aside_li(class=i === 0 ? 'active' : '')
                    .square
                    a.single-object_aside_anchor(href=item.anchor)= item.text